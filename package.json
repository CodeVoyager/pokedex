    "scripts": {
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build:client": "rimraf ./dist/client && webpack --config webpack.config.js --display-error-details",
        "watch:client": "webpack-dev-server --config webpack.config.dev.js",
        "build:server": "rimraf ./dist/server && webpack --config webpack.config.server.js --display-error-details",
        "start:server": "nodemon ./dist/server/index.js",
        "prepare:server": "copyfiles ./dist/client/**/* -u 2 ./dist/server/public",
        "prettier": "prettier --write \"src/**/@(*.ts|*.tsx|*.js)\"",
        "build": "npm run build:client && npm run build:server && npm run prepare:server",
        "start": "node ./dist/server/index.js"
    },
